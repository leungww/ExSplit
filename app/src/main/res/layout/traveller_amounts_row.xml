<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="2"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/traveller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="@dimen/attribute_margin"
        android:textColor="@color/primaryColor"/>

    <EditText
        android:id="@+id/traveller_paid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_rowSpan="2"
        android:layout_marginTop="@dimen/attribute_margin"
        android:gravity="center_horizontal"
        android:maxLength="10"
        android:inputType="numberDecimal"
        android:digits="0123456789."
        android:ems="6"
        android:imeOptions="actionNext"
        android:hint="@string/paid"
        android:textColorHint="@color/hintColor"/>

    <TextView
        android:id="@+id/traveller_needed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_marginLeft="@dimen/attribute_margin"
        android:layout_marginStart="@dimen/attribute_margin"
        android:text="@string/needs"/>

</GridLayout>