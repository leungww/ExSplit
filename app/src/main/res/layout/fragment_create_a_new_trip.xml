<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fyp.leungww.exsplit.CreateANewTripFragment">

    <Space
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="1">

        <EditText
            android:id="@+id/newtrip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="@dimen/attribute_button_space"
            android:layout_row="0"
            android:gravity="center"
            android:hint="@string/newtrip_name"
            android:singleLine="true"
            android:maxLength="29"
            android:textColor="@color/primaryColor"
            android:textColorHint="@color/hintColor"
            android:textSize="18sp" />

        <Button
            android:id="@+id/newtrip_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="@dimen/attribute_button_space"
            android:layout_row="0"
            android:text="@string/save"
            android:textColor="@android:color/white"
            android:background="@color/accentColor"/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="@dimen/attribute_margin"
            android:layout_row="0"
            android:text="@string/from" />

        <Button
            android:id="@+id/newtrip_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="@dimen/attribute_margin"
            android:layout_row="0"
            android:gravity="center"
            android:text="@string/date_format" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="@dimen/attribute_margin"
            android:layout_row="1"
            android:text="@string/to" />

        <Button
            android:id="@+id/newtrip_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="@dimen/attribute_margin"
            android:layout_row="1"
            android:gravity="center"
            android:text="@string/date_format" />
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/attribute_margin"
        android:text="@string/countries" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="2">

        <CheckBox
            android:id="@+id/newtrip_canada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="@dimen/attribute_margin"
            android:layout_row="0"
            android:text="@string/canada" />

        <CheckBox
            android:id="@+id/newtrip_europe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="@dimen/attribute_margin"
            android:layout_row="0"
            android:text="@string/europe" />

        <CheckBox
            android:id="@+id/newtrip_uk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="@dimen/attribute_margin"
            android:layout_row="1"
            android:checked="true"
            android:text="@string/uk" />

        <CheckBox
            android:id="@+id/newtrip_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="@dimen/attribute_margin"
            android:layout_row="1"
            android:text="@string/us" />
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/attribute_margin"
        android:text="@string/travellers" />

    <Button
        android:id="@+id/newtrip_add_travellers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/attribute_margin"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:text="@string/add_via_fb"
        android:background="@color/com_facebook_blue"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.widget.ProfilePictureView
            android:id="@+id/fb_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/attribute_margin"
            facebook:preset_size="small" />

        <TextView
            android:id="@+id/fb_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/attribute_margin"
            android:layout_marginLeft="@dimen/attribute_margin"
            android:layout_marginStart="@dimen/attribute_margin"
            android:text="@string/username" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/traveller_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/attribute_margin">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>